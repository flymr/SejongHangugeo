<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:fitsSystemWindows="true"
    tools:context="com.flymr92gmail.sejonghangugeo.activities.ListeningActivity">
    <android.support.design.widget.AppBarLayout
        android:id="@+id/appbar_listening"
        android:layout_width ="match_parent"
        android:layout_height ="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">
        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar_learning"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/AppTheme.PopupOverlay"
            app:layout_scrollFlags = "scroll"/>

    </android.support.design.widget.AppBarLayout>
    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_listening"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        />

    <android.support.v7.widget.CardView
        android:id="@+id/word_item_cv"
        app:cardUseCompatPadding="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="50dp"
        app:cardCornerRadius="10dp"
        app:cardElevation="5dp"
        app:cardBackgroundColor="@color/colorAccent"
        android:layout_below="@+id/appbar_listening"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tv_test_task"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textStyle="italic"
                android:textColor="@color/white"
                android:layout_margin="10dp"
                android:layout_gravity="center"
                />
        </LinearLayout>
    </android.support.v7.widget.CardView>
    <FrameLayout
        android:id="@+id/listening_audio_control_ll"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:orientation="vertical"
        android:layout_alignParentBottom="true"
        android:background="@color/blackAlpha"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="top"
            >
            <TextView
                android:id="@+id/tv_listening_audio_start"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:layout_marginStart="10dp"
                android:textColor="@color/white"
                />
            <SeekBar
                android:id="@+id/listening_seek_bar"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:progressTint="@color/white"
                android:thumbTint="@color/white"
                />
            <TextView
                android:id="@+id/tv_listening_audio_end"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginRight="10dp"
                android:layout_marginEnd="10dp"
                android:textColor="@color/white"
                />
        </LinearLayout>
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_gravity="bottom"
            >
            <ImageButton
                android:id="@+id/btn_prev_test"
                android:layout_width="36dp"
                android:layout_height="36dp"
                app:srcCompat="@drawable/ic_chevron_left"
                android:layout_gravity="center|start"
                android:layout_margin="10dp"
                android:background="@android:color/transparent"/>

            <com.wnafee.vector.MorphButton
                android:id="@+id/listening_play_audio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:scaleType="fitCenter"
                app:vc_foregroundTint="@color/white"
                app:vc_startDrawable="@drawable/ic_pause_to_play"
                app:vc_endDrawable="@drawable/ic_play_to_pause"/>

            <ImageButton
                android:id="@+id/btn_next_test"
                android:layout_width="36dp"
                android:layout_height="36dp"
                app:srcCompat="@drawable/ic_chevron_right"
                android:layout_gravity="center|end"
                android:layout_margin="10dp"
                android:background="@android:color/transparent"/>

        </FrameLayout>

    </FrameLayout>
    <Button
        android:id="@+id/accept_answer_btn"
        android:layout_above="@+id/listening_audio_control_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:text="@string/add_answer"
        android:textColor="@color/white"
        android:theme="@style/MyButton"/>

    <EditText
        android:id="@+id/accept_answer_et"
        android:layout_above="@+id/listening_audio_control_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:imeOptions="actionDone"
        android:inputType="text"
        android:hint="@string/write_answer"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"
        android:layout_marginRight="5dp"
        />

</RelativeLayout>
