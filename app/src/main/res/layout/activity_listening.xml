<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.flymr92gmail.sejonghangugeo.activities.ListeningActivity">
    <android.support.design.widget.AppBarLayout
        android:layout_width ="match_parent"
        android:layout_height ="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">
        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar_learning"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/AppTheme.PopupOverlay"
            app:layout_scrollFlags = "scroll"/>
    </android.support.design.widget.AppBarLayout>
    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_listening"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        />

    <TextView
        android:id="@+id/tv_test_task"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:gravity="center"
        android:text="Выберите верное"
        android:layout_alignTop="@+id/rv_listening"
        />
    <FrameLayout
        android:id="@+id/listening_audio_control_ll"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:orientation="vertical"
        android:layout_alignParentBottom="true"
        android:background="@color/blackAlpha"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="top"
            >
            <TextView
                android:id="@+id/tv_listening_audio_start"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:textColor="@color/white"
                />
            <SeekBar
                android:id="@+id/listening_seek_bar"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:progressTint="@color/white"
                android:thumbTint="@color/white"
                />
            <TextView
                android:id="@+id/tv_listening_audio_end"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginRight="10dp"
                android:textColor="@color/white"
                />
        </LinearLayout>
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_gravity="bottom"
            >
            <ImageButton
                android:id="@+id/btn_prev_test"
                android:layout_width="36dp"
                android:layout_height="36dp"
                app:srcCompat="@drawable/ic_chevron_left"
                android:layout_gravity="center|start"
                android:layout_margin="10dp"
                android:background="@android:color/transparent"/>

            <com.wnafee.vector.MorphButton
                android:id="@+id/listening_play_audio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:scaleType="fitCenter"
                app:vc_foregroundTint="@color/white"
                app:vc_startDrawable="@drawable/ic_pause_to_play"
                app:vc_endDrawable="@drawable/ic_play_to_pause"/>

            <ImageButton
                android:id="@+id/btn_next_test"
                android:layout_width="36dp"
                android:layout_height="36dp"
                app:srcCompat="@drawable/ic_chevron_right"
                android:layout_gravity="center|end"
                android:layout_margin="10dp"
                android:background="@android:color/transparent"/>

        </FrameLayout>
        <EditText
            android:id="@+id/accept_answer_et"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:imeOptions="actionDone"
            android:inputType="text"
            android:layout_gravity="bottom"/>
    </FrameLayout>
    <Button
        android:id="@+id/accept_answer_btn"
        android:layout_above="@+id/listening_audio_control_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:text="Принять ответ"
        android:textColor="@color/white"
        android:theme="@style/MyButton"/>



</RelativeLayout>
