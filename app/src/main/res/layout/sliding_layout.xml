<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout android:id="@+id/rl_sliding_panel"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorListBackground"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

<ImageView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_centerHorizontal="true"
    app:srcCompat="@drawable/ic_arrow_drop_down"
    />


    <android.support.v7.widget.CardView
        android:id="@+id/btn_add_all"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        app:cardElevation="10dp"
        android:layout_marginTop="35dp"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:id="@+id/sliding_add_tv"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.4"
                android:textAlignment="center"
                android:textColor="@color/black"/>

            <LinearLayout
                android:layout_weight="0.6"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:orientation="horizontal"
                android:weightSum="2"
                >
                <Button
                    android:id="@+id/sliding_add_all_btn"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:text="все"/>

                <Button
                    android:id="@+id/sliding_add_selected_btn"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent" />
            </LinearLayout>
        </LinearLayout>

    </android.support.v7.widget.CardView>


<android.support.v7.widget.RecyclerView


    android:id="@+id/new_words_recycler"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_below="@+id/btn_add_all"

    />
</RelativeLayout>