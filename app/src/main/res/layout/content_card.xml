<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/content_cards"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_lesson_card"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />


    <com.wnafee.vector.MorphButton
        android:id="@+id/play_card_vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:layout_marginRight="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="20dp"
        android:layout_gravity="center"
        android:scaleType="fitCenter"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        app:vc_foregroundTint="@color/colorAccentAlpha"
        app:vc_startDrawable="@drawable/ic_play_to_pause"
        app:vc_endDrawable="@drawable/ic_pause_to_play"/>

    <com.wnafee.vector.MorphButton
        android:id="@+id/play_card_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:layout_marginRight="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="23dp"
        android:layout_gravity="center"
        android:scaleType="fitCenter"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        app:vc_foregroundTint="@color/colorAccentAlpha"
        app:vc_startDrawable="@drawable/ic_play_to_pause"
        app:vc_endDrawable="@drawable/ic_pause_to_play"/>


</RelativeLayout>
